{
  "name": "@imagine-cx/imaginecx-library",
  "private": false,
  "version": "0.5.13",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && vite build && npm run build:style",
    "build:style": "postcss src/components/style.css -o ./dist/style.css",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,css}' --config ./.prettierrc",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "node --run format"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/imaginecx-library.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/imaginecx-library.umd.js"
      }
    },
    "./style.css": {
      "import": "./dist/imaginecx-library.css",
      "require": "./dist/imaginecx-library.css"
    },
    "./dist/*": "./dist/*.d.ts"
  },
  "main": "dist/imaginecx-library.umd.js",
  "module": "dist/imaginecx-library.es.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "date-fns": "^2.29.3",
    "downshift": "^8.2.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^13.3.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hooks": "^1.0.1",
    "react-router-dom": "^6.11.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^6.0.6",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-linter": "^3.0.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "date-fns": ">=2.29.3",
    "downshift": ">=8.2.3",
    "react": "19.1.0 || >=19.x",
    "react-colorful": "^5.6.1",
    "react-dom": "19.1.0 || >=19.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Imagine-CX/imaginecx-library"
  },
  "keywords": [],
  "author": "Imagine CX",
  "bugs": {
    "url": "https://github.com/Imagine-CX/imaginecx-library/issues"
  },
  "homepage": "https://github.com/Imagine-CX/imaginecx-library#readme",
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1",
    "react-awesome-reveal": "^4.3.1",
    "react-icons": "^4.8.0",
    "tailwind-merge": "^3.2.0"
  }
}
